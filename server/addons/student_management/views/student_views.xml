<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Form View -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name="show_enrolled_courses" 
                            string="Show Enrolled Courses" 
                            type="object" 
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="roll_no"/>
                            <field name="department"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Enrolled Courses">
                            <field name="course_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="credit"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student Tree View -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="email"/>
                <field name="roll_no"/>
                <field name="department"/>
            </list>
        </field>
    </record>
</odoo>